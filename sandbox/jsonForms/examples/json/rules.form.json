              },
              {
                "type": "Label",
                "text": "Rule was successful",
                "rule": {
                  "effect": "SHOW",
                  "condition": {
                    "scope": "#",
                    "schema": {
                      "properties": {
                        "array": {
                          "contains": {
                            "const": "on"
