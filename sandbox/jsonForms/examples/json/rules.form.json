              },
              {
                "type": "Label",
                "text": "Rule was successful",
                "rule": {
                  "effect": "SHOW",
                  "condition": {
                    "scope": "#",
                    "schema": {
                      "properties": {
                        "enum": {
                          "not": {
                            "enum": [
                              "off",
                              "false"
                            ]
                          }
                        }
                      },
                      "required": [
                        "enum"
                      ]
                    }
                  }
                }
              }
            ]
          }
        ],
        "label": "String not"
      },
      {
        "type": "Group",
        "elements": [
          {
            "type": "HorizontalLayout",
            "elements": [
              {
                "type": "Control",
