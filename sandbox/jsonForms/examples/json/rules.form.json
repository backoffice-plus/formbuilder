              {
                "type": "Label",
                "text": "Rule was successful",
                "rule": {
                  "effect": "SHOW",
                  "condition": {
                    "scope": "#",
                    "schema": {
                      "properties": {
                        "integer": {
                          "minimum": 5,
                          "exclusiveMaximum": 10
