      {
        "type": "Group",
        "elements": [
          {
            "type": "HorizontalLayout",
            "elements": [
              {
                "type": "Control",
                "scope": "#/properties/string",
                "label": "enter \"two letters followed by three numbers\" to enable input field"
              },
              {
                "type": "Label",
                "text": "Rule was successful",
                "rule": {
                  "effect": "SHOW",
                  "condition": {
                    "scope": "#",
                    "schema": {
                      "properties": {
                        "string": {
                          "pattern": "^\\w{2}\\d{3}"
                        }
                      },
                      "required": [
                        "string"
                      ]
                    }
                  }
                }
              }
            ]
          }
        ],
        "label": "String Pattern"
